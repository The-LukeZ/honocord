{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@utils/*": ["./src/utils/*"],
      "@ctx/*": ["./src/interactions/*"],
      "@resolvers/*": ["./src/resolvers/*"]
    },
    "types": ["@cloudflare/workers-types", "@types/node"],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
